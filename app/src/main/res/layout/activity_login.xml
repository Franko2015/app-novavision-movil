<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondo2"
    tools:context=".Login.Login">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20sp"
            android:backgroundTint="@color/fondo_azul"
            android:outlineAmbientShadowColor="@color/transparent"
            android:outlineSpotShadowColor="@color/transparent"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="30sp"
                    android:layout_gravity="center|top"
                    android:src="@drawable/logo_sin_lineas"/>


                <TextView
                    android:padding="5sp"
                    android:layout_margin="10sp"
                    android:textColorLink="@color/link"
                    android:id="@+id/LinkPortal"
                    android:textSize="20sp"
                    android:text="@string/portal_cliente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/Validacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text=""
                    android:textSize="15sp"/>

                <EditText
                    android:id="@+id/User"
                    android:layout_margin="10sp"
                    android:layout_width="300sp"
                    android:layout_height="60sp"
                    android:background="@drawable/custom_input"
                    android:drawableStart="@drawable/ic_cuenta"
                    android:drawablePadding="12sp"
                    android:ems="10"
                    android:layout_gravity="center|bottom"
                    android:hint="N° de cliente"
                    android:inputType="number"
                    android:paddingStart="12sp"
                    android:paddingEnd="12sp"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/Password"
                    android:layout_margin="10sp"
                    android:layout_width="300sp"
                    android:layout_height="60sp"
                    android:background="@drawable/custom_input"
                    android:drawableStart="@drawable/ic_candado"
                    android:drawablePadding="12sp"
                    android:ems="10"
                    android:layout_gravity="center"
                    android:hint="Contraseña"
                    android:inputType="textPassword"
                    android:paddingStart="12sp"
                    android:paddingEnd="12sp"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/Ingresar"
                    android:layout_margin="20sp"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="250sp"
                    android:layout_height="80sp"
                    android:layout_gravity="center|bottom"
                    android:layout_marginHorizontal="120sp"
                    android:layout_marginBottom="50sp"
                    android:text="INGRESAR"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    app:strokeColor="@color/white" />

                <TextView
                    android:padding="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Nuestra empresa se enfoca en los ámbitos tecnológicos ofreciendo una gama de servicios de bajo precio para nuestros clientes. Ingresa como cliente en PORTAL CLIENTE o ingresa a nuestra app"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>
</LinearLayout>