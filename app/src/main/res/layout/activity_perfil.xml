<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login.Perfil"
    android:orientation="vertical"
    android:background="@drawable/fondo3">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10sp"
        android:backgroundTint="@color/fondo_azul"
        android:outlineAmbientShadowColor="@color/transparent"
        android:outlineSpotShadowColor="@color/transparent">

        <LinearLayout
            android:id="@+id/arriba"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/Cerrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:outlineSpotShadowColor="@color/transparent"
                android:outlineAmbientShadowColor="@color/transparent"
                android:layout_gravity="end|bottom"
                android:layout_margin="10sp"
                android:autoSizeTextType="uniform"
                android:text="Cerrar Sesión" />

            <EditText
                android:id="@+id/IdCliente"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:ems="10"
                android:drawableStart="@drawable/ic_cuenta"
                android:paddingStart="12sp"
                android:paddingEnd="12sp"
                android:inputType="text"
                android:focusable="false"
                android:clickable="false"
                android:cursorVisible="false"
                android:hint="N° de cliente"
                android:textAlignment="center"
                android:drawablePadding="12sp"
                android:background="@drawable/custom_input"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/NombreCompleto"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:ems="10"
                android:drawableStart="@drawable/ic_nombre"
                android:paddingStart="12sp"
                android:paddingEnd="12sp"
                android:hint="Nombre completo"
                android:focusable="false"
                android:clickable="false"
                android:cursorVisible="false"
                android:textAlignment="textEnd"
                android:drawablePadding="12sp"
                android:background="@drawable/custom_input"
                android:inputType="text"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/Telefono"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:ems="10"
                android:drawableStart="@drawable/ic_telefono3"
                android:paddingStart="12sp"
                android:paddingEnd="12sp"
                android:hint="N° de teléfono"
                android:textAlignment="textEnd"
                android:drawablePadding="12sp"
                android:background="@drawable/custom_input"
                android:inputType="number"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/ContrasenaAntigua"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:ems="10"
                android:drawableStart="@drawable/ic_candado"
                android:paddingStart="12sp"
                android:paddingEnd="12sp"
                android:hint="Contraseña antigua"
                android:focusable="false"
                android:clickable="false"
                android:cursorVisible="false"
                android:textAlignment="textEnd"
                android:drawablePadding="12sp"
                android:background="@drawable/custom_input"
                android:inputType="text"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/ContrasenaNueva"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:ems="10"
                android:drawableStart="@drawable/ic_candado"
                android:paddingStart="12sp"
                android:paddingEnd="12sp"
                android:hint="Contraseña nueva"
                android:textAlignment="textEnd"
                android:drawablePadding="12sp"
                android:background="@drawable/custom_input"
                android:inputType="text"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/Direccion"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:ems="10"
                android:drawableStart="@drawable/ic_direccion"
                android:paddingStart="12sp"
                android:paddingEnd="12sp"
                android:hint="Dirección principal"
                android:focusable="false"
                android:clickable="false"
                android:cursorVisible="false"
                android:textAlignment="textEnd"
                android:drawablePadding="12sp"
                android:background="@drawable/custom_input"
                android:inputType="text"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/Correo"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:ems="10"
                android:drawableStart="@drawable/ic_correo"
                android:paddingStart="12sp"
                android:paddingEnd="12sp"
                android:hint="Correo"
                android:textAlignment="textEnd"
                android:drawablePadding="12sp"
                android:background="@drawable/custom_input"
                android:inputType="textEmailAddress"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/EstadoCuenta"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:ems="10"
                android:drawableStart="@drawable/ic_estado"
                android:paddingStart="12sp"
                android:paddingEnd="12sp"
                android:hint="Estado de cuenta"
                android:focusable="false"
                android:clickable="false"
                android:cursorVisible="false"
                android:textAlignment="center"
                android:drawablePadding="12sp"
                android:background="@drawable/custom_input"
                android:inputType="text"
                android:textSize="16sp" />

            <FrameLayout
                android:id="@+id/abajo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/Volver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|bottom"
                    android:outlineSpotShadowColor="@color/transparent"
                    android:outlineAmbientShadowColor="@color/transparent"
                    android:layout_margin="10sp"
                    android:autoSizeTextType="uniform"
                    android:text="@string/volver" />

                <Button
                    android:id="@+id/GuardarCambios"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:outlineSpotShadowColor="@color/transparent"
                    android:outlineAmbientShadowColor="@color/transparent"
                    android:layout_margin="10sp"
                    android:autoSizeTextType="uniform"
                    android:text="Guardar" />

            </FrameLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>