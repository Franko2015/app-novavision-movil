<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NOVAVISION" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/fondo_azul</item>
        <item name="colorSecondary">@color/fondo_azul</item>
        <item name="colorPrimaryVariant">@color/principal_azul</item>
        <item name="colorSecondaryVariant">@color/principal_azul</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:editTextColor">@android:color/black</item>

        <item name="android:imageButtonStyle">@android:color/darker_gray</item>
    </style>
    <style name="Theme.NOVAVISION.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.NOVAVISION.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.NOVAVISION.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>